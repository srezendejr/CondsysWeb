@model CondSys.Model.Usuarios.Login

@{
    Layout = @"~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

@using (Html.BeginForm("Acessar", "Login", FormMethod.Post, new { id = "frmLogin", name = "frmLogin", @autocomplete = "off", @style="width:100%" }))
{
    @Html.AntiForgeryToken()

    <div id="login-page" class="row">
        <div class="col s12 z-depth-6 card-panel">
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">mail_outline</i>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-lg", placeholder = "E-mail", autofocus = true, @type="Email" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger no-padding" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">lock_outline</i>
                    @Html.TextBoxFor(model => model.Senha, new { @class = "form-control input-lg", placeholder = "Senha", type = "password" })
                    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger no-padding" })
                </div>
            </div>
            @*<div class="row">
                    <div class="col s12 m12 l12">
                        <label>
                            <input type="checkbox"  id="lembrar" class="small"/>
                            <span for="lembrar" class="small">Mantenha-me conectado</span>
                        </label>
                        @Html.HiddenFor(model => model.Lembrar, new { id = "hiddenLembrar", value="false" })
                    </div>
                </div>*@
            <div class="row">
                <div class="col s12">
                    <input type="submit" class="btn waves-effect waves-light col s12" value="Acessar" />
                    <p class="margin center-align">
                        @Html.ActionLink("Esqueceu a Senha?", "EsqueceuSenha", "Login", new { @class = "small" })
                    </p>
                </div>
            </div>
        </div>
    </div>
    <span id="resolucao"></span>
}
